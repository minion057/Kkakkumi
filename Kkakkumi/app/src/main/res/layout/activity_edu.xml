<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EduActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/edu_img_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:elevation="7dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/edu_img_nofacenoti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/img_nofacenoti"
        tools:ignore="MissingConstraints"
        android:elevation="4dp"/>

    <RelativeLayout
        android:id="@+id/edu_relayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/edu_img_vir"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/img_vir"
            tools:ignore="MissingConstraints"
            android:visibility="invisible"/>
    </RelativeLayout>

    <androidx.camera.view.PreviewView
        android:id="@+id/edu_viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="0dp"></androidx.camera.view.PreviewView>
</androidx.constraintlayout.widget.ConstraintLayout>