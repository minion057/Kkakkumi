<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SplashActivity"
    android:paddingTop="100dp"
    android:paddingBottom="70dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:background="@color/colorbackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_weight="8">
        <TextView
            android:id="@+id/loading_txt_Title1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/jalnan"
            android:gravity="center_horizontal"
            android:text="나는야"
            android:textColor="@color/colorTitle1"
            android:autoSizeMinTextSize="20dp"
            android:autoSizeTextType="uniform"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7.5">
        <TextView
            android:id="@+id/loading_txt_Title2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/jalnan"
            android:gravity="center_horizontal"
            android:text="깔끄미"
            android:textColor="@color/colorTitle2"
            android:autoSizeMinTextSize="40dp"
            android:autoSizeTextType="uniform" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_weight="3">
        <ImageView
            android:id="@+id/loading_img_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/img_book_character_1" />
    </RelativeLayout>

</LinearLayout >