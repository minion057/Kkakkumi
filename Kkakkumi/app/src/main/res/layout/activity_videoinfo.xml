<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:adjustViewBounds="true"
    tools:context=".VideoInfoActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/backgrond_roundsquare_pop">

    <TextView
        android:id="@+id/info_txt_info1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorBookback"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/jalnan"
        android:text="재생할 영상이 없습니다.\n교육을 진행해주세요."
        android:padding="30dp"
        android:textColor="@color/colorTitle1" />
    <Button
        android:id="@+id/video_pop_btn_Close"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/backgrond_btnstart"
        android:fontFamily="@font/jalnan"
        android:padding="5dp"
        android:text="닫기"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="20dp"
        android:textColor="@color/colorTitle2"/>
</LinearLayout>