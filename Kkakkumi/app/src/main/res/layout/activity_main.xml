<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/loading_txt_Title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/jalnan"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:textColor="#595959"
        android:text="나는야" />

    <TextView
        android:id="@+id/loading_txt_Title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loading_txt_Title1"
        android:fontFamily="@font/jalnan"
        android:gravity="center_horizontal"
        android:textSize="40dp"
        android:textColor="#82CBC4"
        android:text="깔끄미" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loading_txt_Title2"
        android:layout_centerInParent="true"
        android:layout_marginTop="462dp"
        android:background="@drawable/button_design"
        android:fontFamily="@font/jalnan"
        android:textColor="#82CBC4"
        android:text="시작하기" />

</RelativeLayout>